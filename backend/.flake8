[flake8]
max-line-length = 127
exclude =
    */migrations/*,
    __pycache__,
    */venv/*,
    */env/*,
    .git,
    .pytest_cache,
    htmlcov,
    staticfiles,
    media

ignore = E203,W503,E501,D
# E203: Whitespace before ':' (conflicts with black)
# W503: Line break before binary operator (conflicts with black)
# E501: Line too long (handled by black)
# D: Ignore all docstring checks (D101, D102, D104, D105, D106, D200, etc.)
#    For a makerspace project, strict docstring requirements can slow development

max-complexity = 10
