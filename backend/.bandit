[bandit]
# Bandit configuration file
# https://bandit.readthedocs.io/en/latest/config.html

# Exclude directories and files from scanning
exclude_dirs = /tests,/migrations,/__pycache__,/.pytest_cache,/venv,/env,create_dev_user.py

# Skip specific tests
# B101: assert_used - acceptable in test files
# B106: hardcoded_password_funcarg - acceptable in test files
skips = B101,B106